<table class='table table-hover table-sm'>
	<thead>
		<th>#</th>
		<th>Description</th>
		<th>Specs</th>
		<th>Voorraad</th>
		<th>Artikelgroep</th>
		<th>Eenheid</th>
		<th>Prijs</th>
		<th></th>
	</thead>
	<tbody>
		<% stock_articles.each do |stock_article| %>
		<tr>
			<td><strong><%= stock_article.number %></strong></td>
			<td><%= stock_article.description %></td>
			<td><%= stock_article.specification %></td>
			<td><%= stock_article.stock %></td>	
			<td>
				<% if stock_article.article_group %>
					<%= stock_article.article_group.name%>
				<% end %>
			</td>

			<td><%= stock_article.unit %></td>			
			<td><%= number_to_currency(stock_article.purchase_price, :unit => "&euro;".html_safe) %></td>			
			<td><%= link_to("show", stock_article)%></td>
			<td><%= link_to("Edit", edit_stock_article_path(stock_article))%>
		</tr>
		<% end %>
	</tbody>
</table>

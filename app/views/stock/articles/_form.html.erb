<%= form_for(stock_article) do |f| %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :specification %>
    <%= f.text_area :specification %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
